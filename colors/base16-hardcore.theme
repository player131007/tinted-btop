# Main bg
theme[main_bg]="#212121"

# Main text color
theme[main_fg]="#cdcdcd"

# Title color for boxes
theme[title]="#cdcdcd"

# Highlight color for keyboard shortcuts
theme[hi_fg]="#66d9ef"

# Background color of selected item in processes box
theme[selected_bg]="#303030"

# Foreground color of selected item in processes box
theme[selected_fg]="#cdcdcd"

# Color of inactive/disabled text
theme[inactive_fg]="#707070"

# Misc colors for processes box including mini cpu graphs, details memory graph and details status text
theme[proc_misc]="#66d9ef"

# Cpu box outline color
theme[cpu_box]="#a6e22e"

# Memory/disks box outline color
theme[mem_box]="#fd971f"

# Net up/down box outline color
theme[net_box]="#9e6ffe"

# Processes box outline color
theme[proc_box]="#708387"

# Box divider line and small boxes line color
theme[div_line]="#707070"

# Temperature graph colors
theme[temp_start]="#a6e22e"
theme[temp_mid]="#e6db74"
theme[temp_end]="#f92672"

# CPU graph colors
theme[cpu_start]="#a6e22e"
theme[cpu_mid]="#e6db74"
theme[cpu_end]="#f92672"

# Mem/Disk free meter
theme[free_start]="#a6e22e"

# Mem/Disk cached meter
theme[cached_start]="#e6db74"

# Mem/Disk available meter
theme[available_start]="#fd971f"

# Mem/Disk used meter
theme[used_start]="#f92672"

# Download graph colors
theme[download_start]="#9e6ffe"
theme[download_mid]="#66d9ef"
