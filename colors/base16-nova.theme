# Main bg
theme[main_bg]="#3c4c55"

# Main text color
theme[main_fg]="#c5d4dd"

# Title color for boxes
theme[title]="#c5d4dd"

# Highlight color for keyboard shortcuts
theme[hi_fg]="#83afe5"

# Background color of selected item in processes box
theme[selected_bg]="#556873"

# Foreground color of selected item in processes box
theme[selected_fg]="#c5d4dd"

# Color of inactive/disabled text
theme[inactive_fg]="#899ba6"

# Misc colors for processes box including mini cpu graphs, details memory graph and details status text
theme[proc_misc]="#83afe5"

# Cpu box outline color
theme[cpu_box]="#7fc1ca"

# Memory/disks box outline color
theme[mem_box]="#7fc1ca"

# Net up/down box outline color
theme[net_box]="#9a93e1"

# Processes box outline color
theme[proc_box]="#f2c38f"

# Box divider line and small boxes line color
theme[div_line]="#899ba6"

# Temperature graph colors
theme[temp_start]="#7fc1ca"
theme[temp_mid]="#a8ce93"
theme[temp_end]="#83afe5"

# CPU graph colors
theme[cpu_start]="#7fc1ca"
theme[cpu_mid]="#a8ce93"
theme[cpu_end]="#83afe5"

# Mem/Disk free meter
theme[free_start]="#7fc1ca"

# Mem/Disk cached meter
theme[cached_start]="#a8ce93"

# Mem/Disk available meter
theme[available_start]="#7fc1ca"

# Mem/Disk used meter
theme[used_start]="#83afe5"

# Download graph colors
theme[download_start]="#9a93e1"
