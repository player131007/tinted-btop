# Main bg
theme[main_bg]="#111111"

# Main text color
theme[main_fg]="#a9a9a9"

# Title color for boxes
theme[title]="#a9a9a9"

# Highlight color for keyboard shortcuts
theme[hi_fg]="#00aaff"

# Background color of selected item in processes box
theme[selected_bg]="#141414"

# Foreground color of selected item in processes box
theme[selected_fg]="#a9a9a9"

# Color of inactive/disabled text
theme[inactive_fg]="#868686"

# Misc colors for processes box including mini cpu graphs, details memory graph and details status text
theme[proc_misc]="#00aaff"

# Cpu box outline color
theme[cpu_box]="#98ec65"

# Memory/disks box outline color
theme[mem_box]="#ffcc33"

# Net up/down box outline color
theme[net_box]="#aa88ff"

# Processes box outline color
theme[proc_box]="#88ddff"

# Box divider line and small boxes line color
theme[div_line]="#868686"

# Temperature graph colors
theme[temp_start]="#98ec65"
theme[temp_mid]="#33bbff"
theme[temp_end]="#ff5555"

# CPU graph colors
theme[cpu_start]="#98ec65"
theme[cpu_mid]="#33bbff"
theme[cpu_end]="#ff5555"

# Mem/Disk free meter
theme[free_start]="#98ec65"

# Mem/Disk cached meter
theme[cached_start]="#33bbff"

# Mem/Disk available meter
theme[available_start]="#ffcc33"

# Mem/Disk used meter
theme[used_start]="#ff5555"

# Download graph colors
theme[download_start]="#98ec65"
theme[download_mid]="#33bbff"
theme[download_end]="#ff5555"

# Upload graph colors
theme[upload_start]="#98ec65"
theme[upload_mid]="#33bbff"
theme[upload_end]="#ff5555"
