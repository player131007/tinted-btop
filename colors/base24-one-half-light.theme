# Main bg
theme[main_bg]="#fafafa"

# Main text color
theme[main_fg]="#cfd0d2"

# Title color for boxes
theme[title]="#cfd0d2"

# Highlight color for keyboard shortcuts
theme[hi_fg]="#0084bc"

# Background color of selected item in processes box
theme[selected_bg]="#373942"

# Foreground color of selected item in processes box
theme[selected_fg]="#cfd0d2"

# Color of inactive/disabled text
theme[inactive_fg]="#a4a6ab"

# Misc colors for processes box including mini cpu graphs, details memory graph and details status text
theme[proc_misc]="#0084bc"

# Cpu box outline color
theme[cpu_box]="#4fa14f"

# Memory/disks box outline color
theme[mem_box]="#c08400"

# Net up/down box outline color
theme[net_box]="#a625a4"

# Processes box outline color
theme[proc_box]="#0996b3"

# Box divider line and small boxes line color
theme[div_line]="#a4a6ab"

# Temperature graph colors
theme[temp_start]="#4fa14f"
theme[temp_mid]="#61afef"
theme[temp_end]="#e45649"

# CPU graph colors
theme[cpu_start]="#4fa14f"
theme[cpu_mid]="#61afef"
theme[cpu_end]="#e45649"

# Mem/Disk free meter
theme[free_start]="#4fa14f"

# Mem/Disk cached meter
theme[cached_start]="#61afef"

# Mem/Disk available meter
theme[available_start]="#c08400"

# Mem/Disk used meter
theme[used_start]="#e45649"

# Download graph colors
theme[download_start]="#a625a4"
theme[download_mid]="#0084bc"
theme[download_end]="#0996b3"

# Upload graph colors
theme[upload_start]="#a625a4"
theme[upload_mid]="#0084bc"
theme[upload_end]="#0996b3"
